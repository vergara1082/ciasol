<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SingIn</servlet-name>
        <servlet-class>com.cia.servlet.SingIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Asignacion</servlet-name>
        <jsp-file>/paginas/asignarCurso.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Asignacion</servlet-name>
        <url-pattern>/asingInf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingIn</servlet-name>
        <url-pattern>/singIn</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AgendamientoDelDia</servlet-name>
        <servlet-class>com.cia.servlet.AgendamientoDelDia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>agregarInfractorCurso</servlet-name>
        <servlet-class>com.cia.servlet.agregarInfractorCurso</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AgendamientoDelDia</servlet-name>
        <url-pattern>/AgendamientoDelDia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agregarInfractorCurso</servlet-name>
        <url-pattern>/addInfracCurso</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
